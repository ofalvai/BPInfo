<!-- http://stackoverflow.com/a/37738275/745637 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/border_notice" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/background_notice" />  <!-- background color -->
        </shape>
    </item>
</layer-list>